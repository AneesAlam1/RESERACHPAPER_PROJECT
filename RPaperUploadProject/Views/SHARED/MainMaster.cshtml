    </div>

                @*Modal Segment *@

                <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="bck"  >Enquiry Form</h1>
        @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
      </div>
        <form method="post" action="/home/Enquiry">
      <div class="modal-body">
            
            <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label lead" style="color:blue">Email address</label>
            <input type="email" class="form-control" name="email" placeholder="Enter Email Address" required>
            <small  class="form-text text-danger">We'll never share your email with anyone else.</small>
            </div>
            <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label lead" style="color:blue">Enter Your Query</label>
            <textarea class="form-control" name="query" rows="3" required></textarea>
            <small  class="form-text text-danger">Enquiry Will Be Answered Shortly</small>
            </div>
        
      </div>
      <div class="modal-footer">
        <button type="button" data-bs-dismiss="modal" class="btn btn-danger btn-sm">Close</button>
        <button type="submit" class="btn btn-success btn-sm">Submit</button>
      </div>
        </form>
    </div>
  </div>
</div>

                @*Modal Segment Close*@
        
        

                @*close Menu*@
          </div>  
        </div>
        <div>
        @RenderBody()
        </div>
    </div>
    
    
